#!/usr/bin/make -f
# -*- makefile -*-
DEB_PYTHON_SYSTEM = pysupport

include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/python-distutils.mk

DEB_PYTHON_INSTALL_ARGS_ALL +=--install-lib=/usr/share/termsaver --install-scripts=/usr/share/termsaver

binary-install/terminator::
	dh_link /usr/share/termsaver/termsaver /usr/bin/termsaver

clean::
	rm -rf build/
                                          

